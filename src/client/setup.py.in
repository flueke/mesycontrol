from cx_Freeze import setup, Executable
from os.path import join as pjoin
import importlib
import sys

CSD = '${CMAKE_CURRENT_SOURCE_DIR}'

# Dependencies are automatically detected, but it might need
# fine tuning.

includes = list()
maybe_includes = ['scipy.sparse.csgraph._validation', 'scipy.special._ufuncs_cxx']

for mod in maybe_includes:
    try:
        importlib.import_module(mod)
        includes.append(mod)
    except ImportError:
        pass

build_options = dict(
      packages = ['mesycontrol', 'mesycontrol.ui'],

      # Excluding the python 3 uic and matplotlib. I can't get the latter to
      # work and I am not sure if it's actually needed.
      # Tkinter is excluded to make the build work if $DISPLAY is not set.
      excludes = ['PyQt4.uic.port_v3', 'matplotlib', 'Tkinter'],

      includes = includes,

      include_files = [
          (pjoin(CSD, 'mesycontrol/ui'), 'mesycontrol/ui'),
          # This will use the correct mpl data path but fails later on with Error 21: Is a directory.
          # The created mpl-data directory also has bad permissions.
          #(matplotlib.get_data_path(), 'mpl-data')
          ],

      #zip_includes  = [(pjoin(CSD, 'mesycontrol/ui/mainwin.ui'), 'mesycontrol/ui')],

      init_script = pjoin(CSD, 'cxfreeze_init.py'),
      path = sys.path + [CSD]
      )

base_gui = 'Win32GUI' if sys.platform=='win32' else None

executables = [
    Executable(pjoin(CSD, 'mesycontrol_gui.py'), base=base_gui),
    Executable(pjoin(CSD, 'mesycontrol_script_runner.py'), base=None)
]

version = '0.0' if sys.platform == 'win32' else '@GIT_VERSION@'

setup(name='@CMAKE_PROJECT_NAME@',
      version = version,
      description = 'mesycontrol',
      options = dict(build_exe = build_options),
      executables = executables,
      )
